<?xml version="1.0" encoding="UTF-8"?>
<module>
	<name>guestbook</name>
	<version>1.1.0</version>
	<requirements>
		<minimum_version>3.5.0</minimum_version>
	</requirements>
	<description>
		<![CDATA[The guestbook module enables guests to write comments on your website.]]>
	</description>
	<authors>
		<author>
			<name><![CDATA[Jelmer Snoeck]]></name>
			<url><![CDATA[http://www.jelmersnoeck.com]]></url>
		</author>
	</authors>
	<events>
		<event application="backend" name="after_edit_comment"><![CDATA[Triggered when a comment is edited.]]></event>
		<event application="backend" name="after_saved_settings"><![CDATA[Triggered when the settings are saved.]]></event>
		<event application="frontend" name="after_add_comment"><![CDATA[Triggered when a comment is added.]]></event>
	</events>
</module>